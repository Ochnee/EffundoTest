@using BytexDigital.Blazor.Components.CookieConsent

<CookieConsentCheck RequiredCategory="PayPal" Context="PayPalDonateButton">
    <Allowed>
        <form action="https://www.paypal.com/donate" method="post" target="_top" class="PayPalDonateButton">
        <input type="hidden" name="hosted_button_id" value="FRYP98NZ26K5L" />
        <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donate_LG.gif" border="0" name="submit" title="PayPal - The safer, easier way to pay online!" alt="Donate with PayPal button" />
        <img alt="" border="0" src="https://www.paypal.com/en_DK/i/scr/pixel.gif" width="1" height="1" />
        </form>
    </Allowed>
    <NotAllowed></NotAllowed>
</CookieConsentCheck>



@code {
    [Inject]public IConfiguration config { get; set; }
    public string Link { get; set; }

    protected override void OnParametersSet()
    {
        Link = config["PayPalDonateLink"];
    }
}
